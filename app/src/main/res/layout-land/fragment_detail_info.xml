<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detailName"
        style="@style/DetailHeader" />

    <include layout="@layout/detail_name_underline" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailCharacter"
                android:text="@string/detail_character"
                style="@style/DetailInfo" />

            <TextView
                android:id="@+id/detailAmiiboSeries"
                android:text="@string/detail_amiibo_series"
                style="@style/DetailInfo" />

            <TextView
                android:id="@+id/detailGameSeries"
                android:text="@string/detail_game_series"
                style="@style/DetailInfo" />

            <TextView
                android:id="@+id/detailType"
                android:text="@string/detail_type"
                style="@style/DetailInfo" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailReleases"
                android:text="@string/detail_releases"
                style="@style/DetailInfo" />

            <include layout="@layout/releases_table" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/detail_buttons" />

</LinearLayout>